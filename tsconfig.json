{
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"esnext"
		],
		"allowJs": true,
		"baseUrl": ".",
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"lib"
	]
}
